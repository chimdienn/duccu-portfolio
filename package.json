{
  "name": "duccu-portfolio",
  "version": "1.0.0",
  "description": "Personal portfolio website for Quy Trong Duc Tran",
  "engines": {
    "node": "18.x",
    "npm": "9.x"
  },
  "type": "module",
  "scripts": {
    "start": "node server/index.js",
    "heroku-prebuild": "npm --prefix server ci || npm --prefix server install",
    "build": "NPM_CONFIG_PRODUCTION=false npm --prefix client install --include=dev && npm --prefix client run build",
    "heroku-postbuild": "npm run build",
    "dev": "concurrently \"cd client && npm i && npm run dev\" \"cd server && npm i && npm run dev\""
  },
  "dependencies": {
    "concurrently": "^7.6.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.22.0",
    "@fortawesome/fontawesome-free": "^6.5.1"
  },
  "devDependencies": {
    "baseline-browser-mapping": "^2.9.19",
    "@eslint/js": "^9.13.0",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.13.0",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.13",
    "globals": "^15.11.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "vite": "^5.4.10"
  }
}
